<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading1"
    tools:context=".MenuActivity">



    <TextView
        android:id="@+id/nameWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#726B6A"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/eventButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#413e4f"
                android:onClick="eventPage"
                android:textColor="@android:color/white"
                android:text="Event" />

            <Button
                android:id="@+id/rentButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/eventButton"
                android:textColor="@android:color/white"
                android:background="#413e4f"
                android:onClick="rentPage"
                android:text="Rent" />

            <!--<Button
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventButton"
                android:background="#413e4f"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"
                android:onClick="notificationPage"
                android:text="Notification" />-->
        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>